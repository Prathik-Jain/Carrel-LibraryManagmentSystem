<UserControl x:Class="MemberPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Carrel"
              Background="{DynamicResource MaterialDesignPaper}"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="700">

    <!--Change Defaults-->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DataGrid.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="Label">
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>

            <Style TargetType="materialDesign:PackIcon">
                <Setter Property="Width" Value="24"/>
                <Setter Property="Height" Value="24"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <!--#region Rows and Coloumn Definitions-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="56"/>
            <RowDefinition Height="56"/>
            <RowDefinition Height="56"/>
            <RowDefinition Height="56"/>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="56"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="56"/>
            <ColumnDefinition Width="32"/>


        </Grid.ColumnDefinitions>
        <!--#endregion-->

        <!--#region Name-->
        <StackPanel 
            Orientation="Horizontal" 
            Margin="23,0,0,6"
            Grid.Row="1"
            Grid.ColumnSpan="2" Grid.Column="1">

            <Label x:Name="LblName" 
                 Width="300"
                 FontSize="36"
                 Height="50" 
                 Margin="0,6,18,0" 
                 Foreground="#283592"
                 />

        </StackPanel>
        <!--#endregion-->


        <!--#region UID-->
        <Label x:Name="LblUID" 
                 Width="250"
                 FontSize="24"
                 FontWeight="Light"
                 Grid.Row="2"
                 Height="40" 
                Grid.ColumnSpan="3" 
                Margin="0,0,116,16"/>
        <!-- #endregion-->

        <!--#region Department-->
        <materialDesign:PackIcon Kind="School"
                                 Grid.Row="3"
                                 Grid.Column="1"
                                 Margin="0,0,22,10"/>
        <Label x:Name="LblDepartment"
                 Width="82"
                 Grid.Row="3"
                 Grid.Column="2" 
                 Margin="0,0,188,0" 
                 Height="36"/>
        <!--#endregion-->

        <!--#region Semester-->
        <Label x:Name="LblSemester"
            Width="70"
            Grid.Row="3"
            Grid.Column="2" 
            Margin="0,0,106,0" 
            Height="36" />
        <!--#endregion-->

        <!--#region Phone-->
        <materialDesign:PackIcon Kind="Phone"
                                 Grid.Row="4"
                                 Grid.Column="1"
                                 Margin="0,0,22,10"/>
        <Label x:Name="LblPhone"
                 Width="200"
                 Grid.Row="4"
                 Grid.Column="2"
                 Height="36"  
                 Margin="0,0,70,0" />
        <!--#endregion-->




        <Rectangle Width="700" 
                   Height="12" 
                   Grid.ColumnSpan="6" 
                   Margin="0,10,0,31" 
                   Grid.Row="5"
                   Fill="{DynamicResource PrimaryHueDarkBrush}"/>

        <!--#region Borrowed Book Details List-->
        <DataGrid Margin="0 8 0 0" x:Name="BorrowedList" Grid.Row="6" 
                  Grid.ColumnSpan="6"  
                  ItemsSource="{Binding x}" 
                  CanUserSortColumns="True" 
                  CanUserAddRows="False" 
                  AutoGenerateColumns="False"
                  materialDesign:DataGridAssist.CellPadding="13 8 8 8" 
                  materialDesign:DataGridAssist.ColumnHeaderPadding="8">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding UID}" Header="Book -ID"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding TITLE}" Header="Title" Width="350"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding BORROWEDON}" Header="Borrowed On"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!--#endregion-->

        <!--#region DeleteMember-->
        <Button     x:Name="BtnDelete"
                           Style="{StaticResource MaterialDesignFlatButton}"
                          Click ="OpenDeleteDialog"
                          IsEnabled="True" 
                          Margin="0,0,6,54" 
                          Grid.Column="4" 
                          HorizontalAlignment="Right" 
                          VerticalAlignment="Bottom" 
                          Grid.RowSpan="2">
            <materialDesign:PackIcon Kind="Delete" 
                                     Height="21" 
                                     Width="21" 
                                     Foreground="#e30101" 
                                     Opacity="1"/>
        </Button>
        <!--#endregion-->

        <!--MemberForm Delete Dialog-->
        <materialDesign:DialogHost x:Name="DeleteMemberDialog"
                                   CloseOnClickAway="True"
                                   IsOpen="False"
                                   Grid.Column="0" 
                                   Grid.ColumnSpan="6"
                                   Grid.Row="0" 
                                   Grid.RowSpan="8">
            <materialDesign:DialogHost.DialogContent>
                <local:Delete x:Name="DeleteMember"/>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

        <!--MemberForm Print Dialog-->
        <materialDesign:DialogHost x:Name="PrintMemberDialog"
                                   CloseOnClickAway="True"
                                   IsOpen="False"
                                   Grid.Column="0" 
                                   Grid.ColumnSpan="6"
                                   Grid.Row="0" 
                                   Grid.RowSpan="8">
            <materialDesign:DialogHost.DialogContent>
                <local:Card x:Name="PrintMember"/>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>


        <!--#region  QR-->
        <Image x:Name="ImgQR" 
               Width="150" 
               Height="150"
               Grid.Row="1"
               Grid.Column="3" 
               Grid.ColumnSpan="2" 
               HorizontalAlignment="Right" 
               Grid.RowSpan="3" 
               VerticalAlignment="Bottom"/>

        <!--#region PrintMember-->
        <Button Style="{StaticResource MaterialDesignFlatButton}"
                          Click ="OpenPrintDialog"
                          IsEnabled="True" 
                          Margin="0,0,10,54" 
                          Grid.Column="3" 
                          HorizontalAlignment="Right" 
                          VerticalAlignment="Bottom" 
                          Grid.RowSpan="2">
            <materialDesign:PackIcon Kind="Printer" 
                                     Height="21" 
                                     Width="21" 
                                     Foreground="#283592" 
                                     Opacity="1"/>
        </Button>



        <!--Fab Edit Button-->
        <Button x:Name="BtnEdit"
                Style="{StaticResource MaterialDesignFloatingActionAccentButton}"
                Width="56"
                Height="56"
                Grid.Row="4"
                Grid.Column="4" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,10" 
                Grid.RowSpan="2">
            <materialDesign:PackIcon Kind="Pencil"/>
        </Button>
    </Grid>
</UserControl>
